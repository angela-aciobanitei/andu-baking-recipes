<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/customFontStyle</item>
    </style>

    <style name="labelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
    </style>

    <style name="listStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!--Set Custom Font for entire App, https://www.youtube.com/watch?v=6r-i2yB4ujU -->
    <style name="customFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sansation</item>
    </style>

</resources>
